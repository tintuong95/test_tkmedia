{
	"extends": [
		"eslint:recommended",
		"plugin:import/errors",
		"plugin:react/recommended",
		"plugin:jsx-a11y/recommended"
	],
	"plugins": ["react", "import", "jsx-a11y"],
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"react/react-in-jsx-scope": "off",
		"no-unused-vars": "warn"
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"globals": {
		"jQuery": true,
		"_": true,
		"$": true
	}
}
